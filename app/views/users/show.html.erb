<% content_for(:title_tag) do %>
  <%= @user.first_name ? @user.first_name : 'anonymous' %> <%= @user.last_name ? @user.last_name : '' %>
<% end %>


<div class="container" style="padding-top: 50px">
  <h1>
    <%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %>
  </h1>
  <div class="row">
    <div class="col-md-2 ">
      <%= image_tag "johndoe.jpg", class:"avatar-xxlarge" %>
    </div>
    <div class="col-md-10" style="background: #F8F7F7">
      <span>
        <i class="fa fa-envelope-o" aria-hidden="true"></i>   <%= @user.email %>
        <% if @user.phone_number %>
             |   <i class="fa fa-mobile" aria-hidden="true"></i>   <%= @user.phone_number %>
        <% end %>
      </span>
      <p><%= @user.description %></p>
    </div>
  </div>

  <div class="row" style="padding-top: 50px">

    <% if @user.hubots.count > 0 %>

      <h4><%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %>'s best hubot (in reviews)</h4>
      <%= link_to hubots_user_path do %>
        Show all <%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %>'s hubots
      <% end %>
      <div class="card">
      <%= @user.hubots[0].name %>
      <%= @user.hubots[0].category %>
      <%= @user.hubots[0].model %>
      <%= @user.hubots[0].manufacturer %>
      </div>
      <% else %>
        <h4><%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %> has no hubot to rent :'( </h4>
      <% end %>

  </div>

</div>

