<% content_for(:title_tag) do %>
  <%= @user.first_name ? @user.first_name : 'anonymous' %> <%= @user.last_name ? @user.last_name : '' %>
<% end %>

<div class="container" style="padding-top: 50px">
  <div class="row">
    <div class="col-md-2 ">
      <%= image_tag "johndoe.jpg", class:"avatar-xxlarge" %>
    </div>
    <div class="col-md-10" style="background: #F8F7F7">
      <h3>
        <%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %>
      </h3>
      <span>
        <i class="fa fa-envelope-o" aria-hidden="true"></i>   <%= @user.email %>
        <% if @user.phone_number %>
             |   <i class="fa fa-mobile" aria-hidden="true"></i>   <%= @user.phone_number %>
        <% end %>
      </span>
      <p><%= @user.description %></p>
    </div>
  </div>

  <div class="row" style="padding-top: 50px">

    <% if @user.hubots.count > 0 %>

      <h4><%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %>'s hubots</h4>
      <table class="table table-striped table-responsive" style="">
        <thead>
          <th></th>
          <th>Category</th>
          <th>Model</th>
          <th>Manufacturer</th>
        </thead>
        <t>
          <% @user.hubots.each do |hubot|  %>
            <tr>
              <th scope="row">
                <%= link_to hubot_path do %>
                  <%= image_tag "hubot.jpg", class:"avatar-xlarge" %> <%= hubot.name %>
                <% end %>
              </td>
              <td><%= hubot.category %></td>
              <td><%= hubot.model %></td>
              <td><%= hubot.manufacturer %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% else %>
        <h4><%= @user.first_name ? @user.first_name : 'Anonymous' %> <%= @user.last_name ? @user.last_name : '' %> has no hubot to rent :'( </h4>
      <% end %>

  </div>

</div>

