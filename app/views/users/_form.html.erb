<%= simple_form_for (user), html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone_number %>
  <%= f.input :gender, collection: ["female", "male"] %>
  <%= f.input :description %>
  <%= f.input :birth_date %>
  <%= f.input :owner %>
  <%= f.input :address %>
  <%= f.input :zipcode %>
  <%= f.input :city %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>
