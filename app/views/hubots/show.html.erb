<% content_for(:title_tag) do %>
  <%= @hubot.name %>
<% end %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path "0#{rand(1)}.jpg" %>);">
  <div class="banner-content">
    <h1><%= @hubot.name %></h1>
    <p><%= @hubot.age %> years old</p>
  </div>
</div>

<ul>
  <li>Name: <%= @hubot.name %></li>
  <li>Age: <%= @hubot.age %></li>
  <li>Gender: <%= @hubot.gender %></li>
  <li>Skin color: <%= @hubot.skin_color %></li>
  <li>Category: <%= @hubot.category %></li>
  <li>Manufacturer: <%= @hubot.manufacturer %></li>
  <li>Model: <%= @hubot.model %></li>
  <li>Turing test score: <%= @hubot.turing_test_score %> /100</li>
  <li>Autonomy: <%= @hubot.autonomy %> hours</li>
  <li>Charging time: <%= @hubot.charging_time %> hours</li>
  <li>Price per hour: <%= @hubot.price_per_hour %> $</li>
</ul>

<hr>

<%= link_to "← Back", hubots_path, class: "btn btn-default" %>
