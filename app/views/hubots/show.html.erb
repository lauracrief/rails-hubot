<% content_for(:title_tag) do %>
  <%= @hubot.name %>
<% end %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path "0#{rand(1)}.jpg" %>);">
  <div class="banner-content">
    <%= image_tag "avatars/#{rand(1..10)}.jpg", class:"avatar-xxlarge" %>
    <h1><%= @hubot.name %></h1>
    <p><%= @hubot.age %> years old</p>
  </div>
</div>

<ul>
  <li>Name: <%= @hubot.name %></li>
  <li>Age: <%= @hubot.age %></li>
  <li>Gender: <%= @hubot.gender %></li>
  <li>Skin color: <%= @hubot.skin_color %></li>
  <li>Category: <%= @hubot.category %></li>
  <li>Manufacturer: <%= @hubot.manufacturer %></li>
  <li>Model: <%= @hubot.model %></li>
  <li>Turing test score: <%= @hubot.turing_test_score %> /100</li>
  <li>Autonomy: <%= @hubot.autonomy %> hours</li>
  <li>Charging time: <%= @hubot.charging_time %> hours</li>
  <li>$<%= @hubot.price_per_hour %>/h</li>
</ul>

<hr>

<%= link_to "← Back", hubots_path, class: "btn btn-default" %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Book me now !
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Book <%= @hubot.name %> !</h4>
      </div>
      <div class="modal-body">
        Please choose your dates

        <%= simple_form_for [@hubot, @new_booking], html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
            <%= f.error_notification %>

            <%= f.input :check_in %>
            <%= f.input :check_out %>
            Price per hour : $<%= @hubot.price_per_hour %>
            <%= f.submit "Confirm booking", html: { type:'button', class:'btn btn-primary' } %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <!-- <button type="button" class="btn btn-primary">Confirm</button> -->
      </div>
    </div>
  </div>
</div>

<% @booking.reviews.each do |review| %>
  <p>"<%= review.content %>"</p>
  <p>rating: <%= review.rating %></p>
<% end %>

<%= link_to 'Rate this Hubot', new_hubot_booking_review_path(@hubot, @booking) %>
