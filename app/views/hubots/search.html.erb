<% content_for(:title_tag) do %>
  Search Results
<% end %>

<div class="wrapper bg-grey padded">
  <div class="container">
    <%= link_to "← Back", root_path, class: "btn btn-default" %>
    <div class="row">

      <div class="col-xs-12 heading">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <h3>
              Search results for <strong><%= params["category"] %></strong><br>
            </h3>
          </div>
          <div class="col-xs-12 col-md-6">
            <h3>
              <span style="display: inline-block; width: 2.5em">from</span> <strong><%= params["check_in"] %></strong><br>
              <span style="display: inline-block; width: 2.5em">to</span> <strong><%= params["check_out"] %></strong>
            </h3>
          </div>
        </div>
        <hr>
      </div>

      <% @hubots.each do |hubot| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <div class="card">
            <!--<div class="card-category">Category</div>-->
            <div class="card-image" style="background: linear-gradient(to bottom, rgba(0,0,0,0.1) 33%, rgba(0,0,0,0.2) 100%), url(<%= asset_path "avatars/#{rand(1..10)}.jpg" %>);">
              <span class="card-top-left"><%= hubot.model %></span>
              <span class="card-top-right"><%= hubot.category %></span>
            </div>
            <div class="card-description">
              <!-- Button trigger modal -->
              <!-- <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myModal">Book</button> -->
              <h3><%= hubot.name %></h3>
            </div>

            <%= link_to '', hubot_path(hubot), class: "card-link" %>

          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>





