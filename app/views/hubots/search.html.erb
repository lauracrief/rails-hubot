<% content_for(:title_tag) do %>
  Search Results
<% end %>

<div class="wrapper bg-grey padded">
  <div class="container">
    <%= link_to "Back", root_path, class: "btn btn-default" %>
    <div class="row">

      <div class="col-xs-12 heading">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <h3>
              Search results for <strong><%= params["category"] %></strong><br>
            </h3>
          </div>
          <div class="col-xs-12 col-md-6">
            <h3>
              <span style="display: inline-block; width: 3em">from</span> <strong><%= params["check_in"] %></strong><br>
              <span style="display: inline-block; width: 3em">to</span> <strong><%= params["check_out"] %></strong>
            </h3>
          </div>
        </div>
        <hr>
      </div>

      <% @hubots.each do |hubot| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <%= render 'shared/hubot', hubot: hubot %>
        </div>
      <% end %>

    </div>
  </div>
</div>





