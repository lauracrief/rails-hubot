<div class="banner">
  <div class="banner-background">
    <%= (4...14).each do |number| %>
      <%= link_to hubot_path(number) do %>
        <div class="banner-img" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.2) 100%), url(<%= asset_path "avatars/#{number-3}.jpg" %>);"></div>
      <% end %>
    <% end %>
  </div>
  <div class="banner-content container-fluid">
    <h1>Need a Hubot?</h1>

    <div class="row">
      <div class="col-xs-12">

        <form class="form" action="search" method="get">
          <div class="form-group col-xs-12 col-sm-4" id="category">
            <label for="category" class="sr-only">Category</label>
            <select class="form-control input-lg" name="category">
              <option value="" disabled selected>Choose a category</option>
              <% Hubot::CATEGORIES.each do |category| %>
                <option value="<%= category %>"><%= category %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group col-xs-6 col-sm-3" id="check_in">
            <div class='input-group date' id='datetimepicker8'>
              <label for="check_in" class="sr-only">Check in</label>
              <input type="text" class="form-control input-lg datetimepicker" id="check_in" placeholder="Check In">
              <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
              </span>
            </div>
          </div>

          <div class="form-group col-xs-6 col-sm-3" id="check_out">
            <div class='input-group date' id='datetimepicker8'>
              <label for="check_out" class="sr-only">Check out</label>
              <input type="text" class="form-control input-lg datetimepicker" id="check_out" placeholder="Check Out">
              <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
              </span>
            </div>
          </div>
          <div class="form-group col-xs-12 col-sm-2" id="search">
            <button type="submit" class="btn btn-lg btn-primary">Search</button>
          </div>
        </form>

      </div>

    </div>

  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker8').datetimepicker({
      icons: {
        time: "fa fa-clock-o",
        date: "fa fa-calendar",
        up: "fa fa-arrow-up",
        down: "fa fa-arrow-down"
      }
    });
  });
</script>
